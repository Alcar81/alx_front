{
  "compilerOptions": {
    "target": "es6",  // AmÃ©liore la compatibilitÃ© avec les navigateurs modernes
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",  // Meilleure gestion des modules modernes
    "moduleResolution": "bundler", // Gestion efficace des modules en build moderne
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    // ðŸ“Œ Ajout des alias pour Ã©viter les imports relatifs longs
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"], 
    }
  },
  "include": ["src", "tsconfig.jest.json", "jest.config.js", "__mocks__"],
  "exclude": ["node_modules", "dist", "build"] // Exclusion des dossiers inutiles pour TypeScript
}
